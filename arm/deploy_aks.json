{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.1",
    "parameters": {
        "clusterName": {
            "defaultValue": "aks101cluster",
            "type": "string",
            "metadata": {
                "description": "The name of the Managed Cluster resource."
            }
        },
        "location": {
            "type": "string",
            "metadata": {
                "description": "The location of the Managed Cluster resource."
            }
        },
        "osDiskSizeGB": {
            "defaultValue": 120,
            "minValue": 0,
            "maxValue": 1023,
            "type": "int",
            "metadata": {
                "description": "Disk size (in GB) to provision for each of the agent pool nodes. This value ranges from 0 to 1023. Specifying 0 will apply the default disk size for that agentVMSize."
            }
        },
        "agentVMSize": {
            "defaultValue": "Standard_D2s_v3",
            "type": "string",
            "metadata": {
                "description": "The size of the Virtual Machine."
            }
        },
        "servicePrincipalClientId": {
            "type": "string",
            "metadata": {
                "description": "Client ID (used by cloudprovider)"
            }
        },
        "servicePrincipalClientSecret": {
            "type": "securestring",
            "metadata": {
                "description": "The Service Principal Client Secret."
            }
        },
        "linuxNodePoolName": {
            "defaultValue": "linuxpool",
            "type": "string",
            "metadata": {
                "description": "The name of the Linux Node Pool"
            }
        },
        "windowsNodePoolName": {
            "defaultValue": "window",
            "type": "string",
            "maxLength": 6,
            "metadata": {
                "description": "The name of the Windows Node Pool currently maximum of 6 (six) characters"
            }
        },
        "osType": {
            "defaultValue": "Linux",
            "allowedValues": [
                "Linux",
                "Windows"
            ],
            "type": "string",
            "metadata": {
                "description": "The type of operating system."
            }
        },
        "workspaceName": {
            "type": "string"
        },
        "workspaceResourceGroupName": {
            "type": "string"
        }
    },
    "variables": {
        "workspaceResourceId": "[resourceId(parameters('workspaceResourceGroupName'), 'Microsoft.OperationalInsights/workspaces', parameters('workspaceName'))]",
        "dnsPrefix": "[concat(parameters('clusterName'), '-dns')]"
    },
    "resources": [
        {
            "type": "Microsoft.ContainerService/managedClusters",
            "apiVersion": "2020-02-01",
            "name": "[parameters('clusterName')]",
            "location": "[parameters('location')]",
            "properties": {
                "kubernetesVersion": "1.20.13",
                "dnsPrefix": "[variables('dnsPrefix')]",
                "agentPoolProfiles": [
                    {
                        "name": "[parameters('linuxNodePoolName')]",
                        "osDiskSizeGB": "[parameters('osDiskSizeGB')]",
                        "count": 2,
                        "vmSize": "[parameters('agentVMSize')]",
                        "osType": "[parameters('osType')]",
                        "enableAutoScaling": true,
                        "storageProfile": "ManagedDisks",
                        "type": "VirtualMachineScaleSets",
                        "minCount": 2,
                        "maxCount": 2
                    },
                    {
                        "name": "[parameters('windowsNodePoolName')]",
                        "osDiskSizeGB": "[parameters('osDiskSizeGB')]",
                        "count": 1,
                        "vmSize": "[parameters('agentVMSize')]",
                        "osType": "[parameters('osType')]",
                        "enableAutoScaling": true,
                        "storageProfile": "ManagedDisks",
                        "type": "VirtualMachineScaleSets",
                        "minCount": 1,
                        "maxCount": 1,
                        "maxPods": 30
                    }
                ],
                "networkProfile": {
                    "networkPlugin": "azure",
                    "networkPolicy": "azure",
                    "serviceCidr": "10.0.0.0/16",
                    "dockerBridgeCidr": "172.17.0.1/16"
                },
                "servicePrincipalProfile": {
                    "clientId": "[parameters('servicePrincipalClientId')]",
                    "Secret": "[parameters('servicePrincipalClientSecret')]"
                },
                "enableRBAC": true,
                "addonProfiles": {
                    "omsagent": {
                        "enabled": true,
                        "config": {
                            "logAnalyticsWorkspaceResourceID": "[variables('workspaceResourceId')]"
                        }
                    }
                }
            }
        }
    ],
    "outputs": {

    }
}